/*
Auto-wraps ".wikitable" elements in a wrapper with helper elements to guarantee 100% width and indicate scrollability
See detailed documentation in Dev/mediawiki
deferrable:YES -- The user will not need (or see) this info immediately anyways
*/

(function () {
	
	var isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
	
	$('table.wikitable').each( function() {
		let wrapper = $('<div class="wikitable-auto-wrapper"><div class="before"></div><div class="after"></div>');
		wrapper.insertBefore( $(this) );
		$(this).insertAfter( wrapper.find('.before') );
		
		if( isMobile &&  wrapper.width() < wrapper.prop('scrollWidth') ) wrapper.addClass('scroll-overflow-mobile');
	});

})();

