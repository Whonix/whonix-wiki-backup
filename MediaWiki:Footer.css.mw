/*
CSS styling for our custom footer
See detailed documentation in Dev/mediawiki
*/

/* -------------- */
/* 0. Boilerplate */

.mw-footer-container {
	display: none;
}

/* ----------------- */
/* 1. Footer General */

#custom-footer {
	background: linear-gradient( 90deg, #333, #5a5a5a, #5a5a5a, #333);
	color: white;
	left: 0;
	margin-top: 20px;
	margin-left: calc(50% - 50vw);
	margin-right: calc(50% - 50vw + 8px);
}

#custom-footer > p {
	display: none;
}

#custom-footer .content-wrapper {
	max-width: 960px;
	margin: auto;
	padding: 30px 20px 0;
}

#custom-footer .content-wrapper-2 {
	width: 100%;
	background: #d2d2d2;
	padding: 44px 20px;
	overflow: auto;
}

#custom-footer .divider-border {
	border-bottom: 3px solid #555;
	border-image: linear-gradient(to right, transparent 20%, #b3b3b3, transparent 80%) 1;
}

#custom-footer .expand-button-50 {
	display: inline-block;
	height: 50px;
	width: 50px;
	position: relative;
	margin: 0 15px 15px 0;
}

#custom-footer .expand-button-50:last-child {
	margin-right: 0;
}

#custom-footer .expand-button-50 img {
	position: absolute;
	width: 50px;
	height: 50px;
	left: 0;
	top: 0;
	max-width: none;
	transition: width .2s, height .2s, left .2s, top .2s;
	box-shadow: 2px 2px 3px rgba(0,0,0,.3);
	border-radius: 50%;
}

#custom-footer .expand-button-50:hover img {
	width: 60px;
	height: 60px;
	left: -5px;
	top: -5px;
}

/* -------- */
/* 2. Claim */

#custom-footer .main-claim {
	margin-bottom: 36px;
	padding-bottom: 23px;
}

#custom-footer .main-claim, #custom-footer .main-claim > * {
	width: 100%;
	display: block;
	text-align: center;
}

#custom-footer .main-claim > .headline {
	font-size: 40px;
	font-weight: bold;
	line-height: 1em;
	margin-bottom: 8px;
}

#custom-footer .main-claim .headline .share-tooltip > * {
	font-size: 26px !important;
}

#custom-footer .main-claim .headline .share-tooltip > .button {
	filter: brightness(2);
}

/* --------- */
/* 3. Donate */

#custom-footer .donate {
	text-align: center;
	padding-bottom: 17px;
	margin-bottom: 23px;
}

#custom-footer .donate > * {
	margin-right: 15px;
	display: inline-block;
	vertical-align: top;
	margin-bottom: 20px;
}

#custom-footer .donate > a > img, #custom-footer .donate .donate-button div {
	box-shadow: 2px 2px 5px rgba(0,0,0,.6);
	height: 100px;
	cursor: pointer;
	transition: transform .3s;
}

#custom-footer .donate-button {
	text-decoration: none;
	height: 100px;
}

#custom-footer .donate-button div {
	background: radial-gradient( #ddd, #aaa );
	border-radius: 10px;
	overflow: hidden;
	width: 285px;
}

#custom-footer .donate-button:hover div, #custom-footer .donate > a:hover > img {
	transform: scale(1.1);
}

#custom-footer .donate-button span.text {
	background: white;
	display: block;
	text-align: center;
	font-size: 24px;
	padding: 9px 0 8px;
	color: #f97425;
}

#custom-footer .donate-button span.image {
	width: calc( 100% - 30px);
	display: block;
	margin: auto;
	padding: 10px 22px;
	max-width: 285px;
}

#custom-footer .donate-button span.image img {
	margin: 0;
	width: 100%;
}

/* --------------- */
/* 4. Social Media */

#custom-footer .social {
	text-align: center;
	padding-bottom: 15px;
	margin-bottom: 25px;
}

#custom-footer .social .text {
	margin-bottom: 15px;
}

/* ---------- */
/* 5. Support */

#custom-footer .support {
	text-align: center;
	padding-bottom: 15px;
}

#custom-footer .support .text {
	margin-bottom: 15px;
}

/* ------------------- */
/* 6. Dark Mode switch */

#custom-footer .dark-mode-switch {
	text-align: center;
	margin-bottom: 37px;
	padding-bottom: 20px;
}

#custom-footer .dark-mode-switch a {
	color: white;
	font-size: 14px;
	text-decoration: none;
}

/* -------------- */
/* 7. Open Source */

#custom-footer .opensource {
    max-width: 620px;
    margin: 0 auto 30px;
    padding: 0 0 20px 132px;
    position: relative;
}

#custom-footer .opensource > img {
	background: white;
	border-radius: 5px;
	position: absolute;
	top: 0;
	height: 57px;
}

#custom-footer .opensource > img:first-child {
	left: 0;
	padding: 7px 5px;
}

#custom-footer .opensource > img:nth-child(2) {
	left: 64px;
	padding: 3px;
}

#custom-footer .opensource a {
	color: #6ab9ff !important;
}

/* --------------- */
/* 8. Endorsements */

#custom-footer .endorsements {
	overflow: auto;
	text-align: center;
}

#custom-footer .endorsements > * {
	opacity: 0.8;
	margin: 0 20px 20px 0;
	display: inline-block;
	vertical-align: top;
	border-radius: 8px;
	width: 200px;
	height: 100px;
	position: relative;
	background: radial-gradient(#fafafa 20%, #eaeaea);
	color: #333;
	text-decoration: none;
	font-size: 13px;
	line-height: 1.5em;
	text-align: left;
	overflow: auto;
}

#custom-footer .endorsements > *:hover {
	opacity: 1;
}

#custom-footer .endorsements > .evohost {
	padding: 11px 0 0 23px;
}

#custom-footer .endorsements > .evohost img {
	float: left;
	margin: 0 10px 0 -3px;
}

#custom-footer .endorsements > .kicksecure > a {	
	position: absolute;	
	top: 0;	
	left: 0;	
	width: 100%;	
	padding-top: 16px;	
	text-align: center;
}

/* -------- */
/* 9. Legal */

#custom-footer .legal {
	color: #808080;
	margin: 18px auto 0;
	max-width: 750px;
}

#custom-footer .legal > span {
	display: block;
	text-align: center;
	font-size: 12px;
}

#custom-footer .legal a {
	color: #008CBA !important;
}

#custom-footer .legal .disclaimer {
	line-height: 1.4em;
	margin-bottom: 10px;
}

#custom-footer .legal .rights {
	color: #555;
	font-size: 14px;
}

#custom-footer .legal .rights img {
	height: 20px;
	vertical-align: text-bottom;
	margin-left: 1px;
}

#custom-footer .legal .rights img:hover {
	transform: scale(1.3);
}

/* ----------------- */
/* 10. Payment Modal */

#footer-show-qr-codes-modal {
	color: #333;
}

#footer-show-qr-codes-modal .content {
	background: #eee;
	padding: 50px;
}

#footer-show-qr-codes-modal h5 {
	margin: -50px -50px 20px -50px;
	background: white;
	padding: 20px 50px;
	font-size: 16px;
}

#footer-show-qr-codes-modal img {
	float: left;
	margin: 0 20px 20px 0;
}

#footer-show-qr-codes-modal .qr-area {
	font-size: 16px;
}

#footer-show-qr-codes-modal .code-select:not(:hover) {
	background: white;
}

