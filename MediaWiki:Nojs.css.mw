/*
The styles in this file are only activated if the user has Javascript deactivated.
See detailed documentation in Dev/mediawiki
*/

/* ------------------ */
/* 0. General classes */

.show-for-nojs-only {
	display: revert !important;
}

.show-for-js-only {
	display: none !important;
}

.hide-for-nojs-only {
	display: none !important;
}

.hide-for-js-only {
	display: revert !important;
}

/* ------------- */
/* 1. CodeSelect */

.code-select {
	font-family: Courier, monospace;
	font-size: 14px;
	color: #0054a8;
	line-height: 1.6em;
	width: 100%;
	overflow: auto;
	white-space: pre;
	padding: 4px 13px 2px 15px;
	cursor: auto !important;
}

/* ------------------------ */
/* 2. Pay via Paypal module */

.pay-via-paypal-module {
	display: block;
}

/* ----------------------------- */
/* 3. Expand/Collapse All button */

.expand-or-collapse-all-button {
	display: none;
}

/* --------------------------- */
/* 4. Sitenotice (dismissable) */

#siteNotice .mw-dismissable-notice {
	opacity: 1 !important;
}

/* ----------------------- */
/* 5. TabContentController */

.tab-content-controller {
	display: none;
}

:not(.tab-content-controller)[data-tcc-id].active,
:not(.tab-content-controller)[data-tcc-id]:not(.active) {
	display: block !important;
}

