/*
All styles for Widget:Sitenotice
See detailed documentation in Dev/mediawiki
*/

/* --------------------- */
/* 1. General SiteNotice */

#siteNotice {
	display: none;
}

#siteNotice #localNotice, p {
	margin: 0;
}

#siteNotice.hide-notice {
	display: none !important;
}

#siteNotice .sitenotice-body {
	position: relative;
}

#siteNotice .sitenotice-body > p {
	display: none;
}

#siteNotice .sitenotice-close {
	width: 28px;
	height: 32px;
	position: absolute;
	top: 7px;
	right: 10px;
	filter: brightness( 2 );
	z-index: 10;
	cursor: pointer;
	padding: 5px;
}

#siteNotice .sitenotice-close img {
	width: 100%;
	height: 100%;
	object-fit: contain;	
}

#siteNotice .sitenotice-close:hover {
	filter: brightness( 1.7 );
	transform: scale( 1.3 );
}

#siteNotice .sitenotice-close.dark {
	filter: brightness( 0 );	
}

#siteNotice .sitenotice-close.dark:hover {
	filter: brightness( .9 );	
}

/* -------------- */
/* 2. All Banners */

#siteNotice .banner {
	box-shadow: 2px 2px 6px rgb(0 0 0 / 20%);
	border-radius: 8px;
	overflow: hidden;
	display: block;
}

#siteNotice .banner > * {
	vertical-align: middle;
}

#siteNotice .banner img.full-size {
	width: 100%;
	height: auto;
}

/* ----------------------------------------- */
/* 3. Individual banner styles for all wikis */

/* 3.1. Banner b001 */

#siteNotice .banner#b001 {
	padding: 5px 0;
	background: linear-gradient( #22a7dF, #43b3f1 );
	color: white;
	font-size: 20px;
	border-radius: 10px;
	border: 1px solid #22a7dF;
	text-decoration: none;
	width: 100%;
}

#siteNotice .banner#b001:hover {
	background: linear-gradient( #1297cF, #43b3f1 );
}
	
#siteNotice .banner#b001 .icon {
	margin-right: 13px;
	height: 40px;
}

#siteNotice .banner#b001 span {
	position: relative;
	top: 1px;
}

