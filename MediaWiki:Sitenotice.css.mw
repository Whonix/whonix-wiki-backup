/* --------------------- */
/* 1. General SiteNotice */

#siteNotice {
	display: none;
}

body.ctbc_sitenotice-banner-expired_true #siteNotice {
	display: none !important;
}

#siteNotice #localNotice, p {
	margin: 0;
}

#siteNotice.hide-notice {
	display: none !important;
}

#siteNotice .sitenotice-body {
	position: relative;
}

#siteNotice .sitenotice-close {
	width: 14px;
	height: 14px;
	position: absolute;
	top: 11px;
	right: 13px;
	filter: brightness( 2 );
	z-index: 10;
	cursor: pointer;
}

#siteNotice .sitenotice-close img {
	width: 100%;
	height: 100%;
	object-fit: contain;	
}

#siteNotice .sitenotice-close:hover {
	filter: brightness( 1.7 );
	transform: scale( 1.3 );
}

#siteNotice .sitenotice-close.dark {
	filter: brightness( 0 );	
}

#siteNotice .sitenotice-close.dark:hover {
	filter: brightness( .9 );	
}

/* -------------- */
/* 2. All Banners */

#siteNotice .banner {
	display: none;
}

#siteNotice .banner.active {
	display: block;
}

body.ctbc_sitenotice-banner-expired_true #siteNotice .banner.active {
	display: none !important;
}

#siteNotice .banner > * {
	vertical-align: middle;
}

#siteNotice .banner img.full-size {
	width: 100%;
	height: auto;
}

/* ----------------------------------------- */
/* 3. Individual banner styles for all wikis */

/* 3.1. banner-01 */

#siteNotice [data-banner-id=banner-01] {
	padding: 5px 0;
	background: linear-gradient( #22a7dF, #43b3f1 );
	color: white;
	font-size: 20px;
	border-radius: 10px;
	border: 1px solid #22a7dF;
	text-decoration: none;
	width: 100%;
}

#siteNotice [data-banner-id=banner-01]:hover {
	background: linear-gradient( #1297cF, #43b3f1 );
}
	
#siteNotice [data-banner-id=banner-01] .icon {
	margin-right: 13px;
	height: 40px;
}

#siteNotice [data-banner-id=banner-01] span {
	position: relative;
	top: 1px;
}

