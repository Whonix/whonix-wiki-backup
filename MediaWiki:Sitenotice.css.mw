/*
All styles for Widget:Sitenotice
See detailed documentation in Dev/mediawiki
*/

/* --------------------- */
/* 1. General SiteNotice */

#siteNotice {
	/* display: block; */
	display: none !important;
}

#siteNotice #localNotice, p {
	margin: 0;
}

#siteNotice.hide-notice {
	display: none !important;
}

#siteNotice .mw-dismissable-notice {
	opacity: 0;
	transition: opacity .3s;
}

#siteNotice.show-notice .mw-dismissable-notice {
	opacity: 1;
}

#siteNotice .mw-dismissable-notice-body {
	margin: 0;
}

#siteNotice .mw-dismissable-notice-close {
	position: absolute;
	right: 5px;
	top: 3px;
	z-index: 10;
}

#siteNotice .mw-dismissable-notice-close a {
	font-size: 20px;
	color: #555;
	padding: 0 8px;
}

#siteNotice .mw-dismissable-notice-close a:hover i {
	transform: scale(1.2);
	color: black;
}

/* -------------- */
/* 2. All Banners */

#siteNotice .banner {
	/* display: block; */
	display: none;
	position: absolute;
	top: 0;
}

#siteNotice .banner.active {
	/* display: block; */
	display: none !important;
}

#siteNotice .banner > * {
	vertical-align: middle;
}

