/*
TabContentController Gadget - CSS Styling
See detailed documentation in Dev/mediawiki
*/

/* ---------- */
/* 1. General */

.tab-content-controller {
	min-height: 77px;
	overflow: auto;
}

html.client-nojs .tab-content-controller {
	display: none;
}

.tab-content-controller .mininav {
	overflow: auto;	
	margin: 0;
}

.tab-content-controller .mininav li > * > img {
	height: 25px;
	margin-right: 8px;
}

/* -------------------------------- */
/* 2. Content before initialization */

:not(.tab-content-controller)[data-tcc-id]:not(.active) {
	display: none !important;
}

html.client-nojs :not(.tab-content-controller)[data-tcc-id].active,
html.client-nojs :not(.tab-content-controller)[data-tcc-id]:not(.active)
{
	display: block !important;
}

/* -------------------------------- */
/* 3. Special class for Indentation */

.tab-content-controller.tcc-indent > .content {
  border-left: 4px solid #fafafa;
  padding-left: 24px;
}

/* -------------------------------------- */
/* 4. Special class for darker Background */

.tab-content-controller.tcc-dark > .content {
  border-left-color: #afafaf;
}

