/*
Custom Header - CSS styling
See detailed documentation in Dev/mediawiki
*/

/* ---------- */
/* 1. General */

#custom-header {
	position: fixed;
	/* makes position: fixed work on old mobile web browsers */
	-webkit-backface-visibility: hidden;
	height: 50px;
	top: 0;
	left: 0;
	width: 100vw;
	z-index: 1000;
}

#custom-header .style-wrapper {
	width: 100%;
	max-width: 960px;
	background: transparent;
	margin: auto;
	height: 100%;
	position: relative;
}

#custom-header .style-wrapper > * {
	vertical-align: top;
}

/* 1.1. Header related page styles */

.mw-notification {
	top: 100px;
	border-color: #ddd;
	box-shadow: 2px 2px 5px rgba(0,0,0,.1);
	border-radius: 8px;
}

/* ---------------------------- */
/* 2. Mobile Menu and Logo left */

#custom-header .menu-trigger {
	display: none;
    cursor: pointer;
    width: 36px;
    height: 53px;
    margin-left: 7px;
    padding: 0 5px;
    object-fit: contain;
    object-position: 0 12px;
}

#custom-header .menu-trigger:hover {
	filter: brightness(0);
}

#custom-header a.home {
	position: relative;
	height: 50px;
	display: inline-block;
}

#custom-header a.home:hover {
	transform: scale(1.1);
}

/* ------------ */
/* 3. Menu left */

#custom-header .nav-menu {
	display: inline-block;
	vertical-align: top;
	position: relative;
}

#custom-header .nav-menu > a {
	height: 52px;
	font-size: 18px;
	line-height: 49px;
	padding: 0 6px;
	text-decoration: none;
	cursor: pointer;
	color: #444;
}

#custom-header .nav-menu > a:hover {
	transform: scale(1.1);
	color: black;
}

/* ------------- */
/* 4. Menu right */

#custom-header .menu-right {
	display: inline-block;
    float: right;
    height: 52px;
}

#custom-header .menu-right > * {
	vertical-align: top;
}

/* ----------- */
/* 5. Search */

#custom-header .search {
	width: 30px;
	height: 50px;
	display: inline-block;
	cursor: pointer;
	text-align: center;
}

#custom-header .search > img {
	width: 26px;
	height: auto;
	position: relative;
	top: 11px;
}

#custom-header .search:hover img {
	transform: scale(1.1);
	filter: brightness(0);
}

/* --------------- */
/* 6. Super Menu */

#custom-header .super-menu {
	width: 50px;
	height: 52px;
	display: inline-block;
	position: relative;
}

#custom-header .menu-title {
	width: 100%;
	height: 52px;
	display: inline-block;
	cursor: pointer;
	text-align: center;
}

#custom-header .super-menu .menu-title > img {
	width: 27px;
	position: relative;
	top: 13px;
	height: auto;
}

#custom-header .menu-title:hover img {
	filter: brightness(0);
}

#custom-header .super-menu .submenus {
	padding: 0 10px 20px;
	width: max-content;
	position: absolute;
	right: -136px;
	top: 50px;
	text-align: left;
	border-radius: 0 0 10px 10px;
	border-top: none;
	display: none;
}

#custom-header .super-menu:hover .submenus {
	display: block;
}

#custom-header .super-menu .submenus > * {
	display: inline-block;
	vertical-align: top;
	padding: 0 3px;
}

#custom-header .super-menu .submenus > * > * {
	display: block;
	padding: 4px 8px 3px 30px;
	text-decoration: none;
	color: #555;
	position: relative;
}

#custom-header .super-menu .submenus > * > *:before {
	position: absolute;
	font-family: "Font Awesome 6 Free";
	font-weight: 900;
	top: 3px;
	left: 0;
	width: 29px;
	text-align: center;
}

#custom-header .super-menu .submenus > * > .headline {
    background: #f0f0f0;
    border-radius: 4px;
    cursor: default;
    padding: 8px 0 9px;
    padding-bottom: 9px;
    margin: 5px 3px;
    text-align: center;
}

#custom-header .super-menu .submenus .headline.user {
	max-width: 150px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: pre;
}

#custom-header .super-menu .submenus > * > *:not(.headline):hover {
	color: black;
}

#custom-header .super-menu a i {
	position: absolute;
	left: 2px;
	top: calc( 50% - 7px );
	width: 20px;
	display: inline-block;
	text-align: center;
}

/* ----------------------- */
/* 6.1. User not logged in */

body:not(.user-logged-in) #custom-header .super-menu .user-logged-in { display: none; }
body.user-logged-in #custom-header .super-menu .user-logged-out { display: none; }
body.user-logged-in #custom-header .super-menu .headline.user { background-color: #c2dff9; }

body.page-is-watched #custom-header .super-menu .watch { display: none; }
body:not(.page-is-watched) #custom-header .super-menu .unwatch { display: none; }

/* ---------------- */
/* 7. Donate button */

#custom-header .donate {
	height: 40px;
	font-weight: bold;
	line-height: 40px;
	color: #686868;
	text-decoration: none;
	display: inline-block;
	text-align: center;
	margin-top: 5px;
}

#custom-header .donate:hover {
	background-size: 32px !important;
	background-color: #f8f8f8 !important;
	color: black !important;
}

#custom-header .donate img {
	width: 27px;
	position: relative;
}

/* ----------------- */
/* 8. Mobile Version */

@media (max-width: 700px) {
	#custom-header .menu-trigger {
		display: inline-block;
	}

	#custom-header .nav-menu {
		position: absolute;
		left: 8px;
		top: 50px;
	    border: 1px solid #ddd;
		border-top: none;
		border-radius: 0 0 8px 8px;
		overflow: hidden;
		display: none;
	    width: 135px;
	    background: white;
	}

	#custom-header .menu-trigger:hover + .home + .nav-menu,
	#custom-header .nav-menu:hover {
		display: block;
	}

	#custom-header .nav-menu > a {
	    padding: 0 15px;
	    width: 100%;
	    display: block;
	    margin: 5px 0px;
	    height: 39px;
	    line-height: 42px;
	}
	
	#custom-header .nav-menu > a:hover {
	    transform: none;
		background: #eee;	
	}
}

@media (max-width: 460px) {
	#custom-header a.home {
		font-size: 16px;
	}

	#custom-header .search {
		background-position-x: 2px;
	}

	#custom-header div.super-menu {
		width: 34px;
	}

	#custom-header div.super-menu .menu-title {
		background-position: 4px 17px;
	}
	
	#custom-header .super-menu .submenus {
		right: -114px;
	}

	#custom-header .super-menu .submenus > * {
		padding: 0 !important;
	}

	#custom-header .super-menu .submenus > * > * {
		font-size: 13px;
		margin-top: 7px;
		margin-bottom: 7px;
	}

}

/* -------------------------------------------- */
/* -------------------------------------------- */
/* -------------------------------------------- */


#custom-header .nav-menu > div {
	display: inline-block;
}

#custom-header .nav-menu > div > .button {
	height: 53px;
	font-size: 20px;
	padding: 6px 0 0 9px;
	cursor: pointer;
}

@media( max-width: 840px ) {
	#custom-header .nav-menu > div > .button {
		font-size: 14px;
		padding: 11px 0 0 4px;
	}
}
	
#custom-header .nav-menu > div > .menu {
	display: none;
	position: fixed;
	left: 0;
	background: whitesmoke;
	top: 52px;
	width: 100%;
	text-align: center;
	box-shadow: 2px 2px 8px rgb(0 0 0 /10%);
	padding: 10px 0;
	column-count: 3;
	column-gap: 5px;
}

#custom-header .nav-menu > div > .button:hover + .menu,
#custom-header .nav-menu > div > .menu:hover {
	display: block;
}

#custom-header .nav-menu > div > .menu > a {
	display: block;
	font-size: 16px;
	padding: 7px 0;
	color: #333;
	line-height: 1.4em;
	text-decoration: none;
}

#custom-header .nav-menu > div > .menu > a:hover {
	background: #eee;	
}

@media( max-width: 840px ) {
	#custom-header .nav-menu > div > .menu > a {
		font-size: 14px;
		padding: 10px 0;
	}
}

