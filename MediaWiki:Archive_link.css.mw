/*
Archive_Link widget - CSS styling
See detailed documentation in Dev/mediawiki
*/

.ext-link-to-archive {
	display: inline-block;
	width: 1.4em;
	height: 1.2em;
	margin-left: .2em;
	position: relative;
}
.ext-link-to-archive:not(:hover) {
	opacity: .6;
}

.ext-link-to-archive a {
	display: inline-block;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	text-align: center;
}

.ext-link-to-archive img {
	display: inline-block;
	height: 100%;
}

