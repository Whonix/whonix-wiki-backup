/* --------------------------- */
/* 20. Anti-Spam Email tooltip */

.antispam-email-tooltip {
	position: relative;
}

.antispam-email-tooltip .tooltip {
	display: none;
	position: absolute;
	left: -1px;
	background: white;
	z-index: 10;
	padding: 10px 20px;
	top: 2.2em;
	border-radius: 6px;
	box-shadow: 2px 2px 3px rgba( 0 0 0 / 10% );
}

.antispam-email-tooltip:hover .tooltip {
	width: 250px;
	display: block;
}

.antispam-email-tooltip:hover .tooltip:before {
	content: " ";
	position: absolute;
	top: -14px;
	left: 11px;
	border-width: 7px;
	border-style: solid;
	border-color: transparent transparent white transparent;
}

.antispam-email-tooltip:hover .ul {
	color: red;	
	padding: 7px 13px;
	display: inline-block;	
}
	
.antispam-email-tooltip:hover .ul > span {
	display: list-item;	
}


