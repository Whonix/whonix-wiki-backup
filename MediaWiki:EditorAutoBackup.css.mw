/*
EditorAutoBackup Gadget - JS Initialisation, Setup, Events. The editor can now save a backup of the last save to localStorage
See detailed documentation in Dev/mediawiki
*/

#wikiEditor-ui-toolbar .editor-auto-backup {
	position: absolute;
	right: 40px;
	top: 5px;
	cursor: pointer;
	font-size: 20px;
	text-align: center;
	width: 30px;
	height: 30px;
	color: #01ca0e;
}

#editorAutoBackupModal div.content {
	position: absolute;
	left: 50px;
	max-width: calc(100% - 150px);
	height: calc(100% - 200px);
	border: none;
	box-shadow: 3px 3px 10px rgba(0,0,0,.3);
	background: #eee;
	padding: 20px;
}

#editorAutoBackupModal div.title {
	font-weight: bold;
}

#editorAutoBackupModal div.content textarea {
	position: absolute;
	top: 120px;
	left: 20px;
	width: calc(100% - 40px);
	height: calc( 100% - 140px );
	overflow: auto;
	white-space: pre;
	font-family: monospace;
	font-size: 14px;
}

