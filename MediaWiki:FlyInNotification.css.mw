/*
Widget: FlyInNotificaton - CSS Styling
See detailed documentation in Dev/mediawiki
*/

/* 1. General */

#fly-in-notification-panel {
	width: 200px;
	background: white;
	box-shadow: 3px 3px 7px rgba(0,0,0,.2);
	border-radius: 10px 0 0 10px;
	position: fixed;
	right: 0;
	top: calc( 50% - 125px );
	z-index: 1000;
	overflow: hidden;
	display: none;
	border: 1px solid #22a7dF;
	border-right: none;
}

#fly-in-notification-panel a {
	font-weight: bold;
}

/* 2. Elements */

#fly-in-notification-panel .inner-wrapper {
	width: 200px;
}

#fly-in-notification-panel .close-panel {
	float: left;
	color: white;
	font-size: 24px;
	padding: 10px;
	cursor: pointer;
	opacity: .7;
	position: absolute;
	left: 6px;
	top: 2px;
}

#fly-in-notification-panel .close-panel:hover {
	opacity: 1;
}

#fly-in-notification-panel .image {
	background: linear-gradient( #22a7dF, #43b3f1 );
	text-align: center;
	padding: 10px 0;
}

#fly-in-notification-panel img {
	width: 80%;
}

#fly-in-notification-panel .content {
	padding: 0 15px 10px 20px;
	text-align: justify;
}

#fly-in-notification-panel .content h4 {
	font-size: 20px;
	margin: 10px 0 0;
	padding-bottom: 0;
}

